<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

  <!-- Managing auto generation of timestamp by Database -->
  <property name="now" value="now()" dbms="mysql,hsqldb,postgresql" />
  <property name="now" value="sysdate" dbms="oracle" />
  <property name="now" value="CURRENT_TIMESTAMP" dbms="mssql" />
  
  <!-- changeSet author="web-conferencing" id="1.0.0-fix1">
      <preConditions onFail="WARN">
          <tableExists tableName="WBC_PARTICIPANTS" />
      </preConditions>
      <comment>Delete WBC_PARTICIPANTS.</comment>
      <dropTable tableName="WBC_PARTICIPANTS"/>
  </changeSet -->
  <changeSet author="web-conferencing" id="1.0.0-fix2">
      <preConditions onFail="WARN">
          <tableExists tableName="WBC_CALLS" />
      </preConditions>
      <comment>Delete WBC_CALLS.</comment>
      <dropTable tableName="WBC_CALLS"/>
  </changeSet>
  
  <!-- Definition of WBC_CALLS table -->
  <changeSet author="web-conferencing" id="1.0.0-1b">
    <createTable tableName="WBC_CALLS">
      <column name="ID" type="NVARCHAR(255)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_WBC_CALLID" />
      </column>
      <column name="PROVIDER_TYPE" type="NVARCHAR(32)">
        <constraints nullable="false" />
      </column>
      <column name="OWNER_ID" type="NVARCHAR(255)">
        <constraints nullable="false" />
      </column>
      <column name="OWNER_TYPE" type="NVARCHAR(32)">
        <constraints nullable="false" />
      </column>
      <column name="STATE" type="NVARCHAR(32)">
        <constraints nullable="true" />
      </column>
      <column name="TITLE" type="NVARCHAR(255)">
        <constraints nullable="true" />
      </column>
      <column name="SETTINGS" type="NVARCHAR(20480)">
        <constraints nullable="true" />
      </column>
      <column name="LAST_DATE" type="TIMESTAMP" defaultValue="${now}">
        <constraints nullable="false" />
      </column>
      <column name="IS_GROUP" type="SMALLINT">
        <constraints nullable="false" />
      </column>
      <column name="IS_USER" type="SMALLINT">
        <constraints nullable="false" />
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci" />
    </modifySql>
  </changeSet>
  
  <!-- Definition of WBC_CALLS constraint -->
  <changeSet author="web-conferencing" id="1.0.0-2a">
    <addUniqueConstraint tableName="WBC_CALLS" columnNames="OWNER_ID, IS_GROUP" constraintName="CT_WBC_GROUP_CALL" />
  </changeSet>
  
  <!-- Definition of WBC_PARTICIPANTS table -->
  <changeSet author="web-conferencing" id="1.0.0-3b">
    <createTable tableName="WBC_PARTICIPANTS">
      <column name="ID" type="NVARCHAR(255)">
        <constraints nullable="false" />
      </column>
      <column name="CALL_ID" type="NVARCHAR(255)">
        <constraints nullable="false" />
      </column>
      <column name="TYPE" type="NVARCHAR(32)">
        <constraints nullable="false" />
      </column>
      <column name="STATE" type="NVARCHAR(32)">
        <constraints nullable="true" />
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=INNODB CHARSET=UTF8 COLLATE utf8_general_ci" />
    </modifySql>
  </changeSet>

  <!-- Definition of WBC_PARTICIPANTS constraints -->
  <changeSet author="web-conferencing" id="1.0.0-4b">
    <addPrimaryKey tableName="WBC_PARTICIPANTS" columnNames="ID, CALL_ID" constraintName="PK_WBC_CALLPART" />
    <!-- When call deleted in WBC_CALLS - all parts should be deleted. When call ID updated in WBC_CALLS, all its references in WBC_PARTICIPANTS 
      should be updated accordingly. -->
    <addForeignKeyConstraint baseTableName="WBC_PARTICIPANTS" baseColumnNames="CALL_ID"
      referencedTableName="WBC_CALLS" referencedColumnNames="ID" constraintName="FK_WBC_PARTCALL" onDelete="CASCADE" onUpdate="CASCADE" />
  </changeSet>
  
</databaseChangeLog>